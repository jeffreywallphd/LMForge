# Backend Service Dockerfile - RAG Backend with Ollama and PostgreSQL
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy only the rag-backend requirements first (for better caching)
COPY rag-backend/requirements.txt .

# Install all backend dependencies including ML libraries
RUN pip install --no-cache-dir -r requirements.txt

# Copy rag-backend source code
COPY rag-backend/ ./

# Create logs directory
RUN mkdir -p /app/logs

# Expose the port the app runs on
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV OLLAMA_URL=http://ollama:11434
ENV DB_HOST=postgres
ENV DB_PORT=5432
ENV DB_NAME=pdf_rag_db
ENV DB_USER=pdf_rag_user
ENV DB_PASSWORD=pdf_rag_password

# Command to run the application with initialization
CMD ["sh", "-c", "python init_rag_storage.py || true && uvicorn main:app --host 0.0.0.0 --port 8000 --reload"]